<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/introduction_background_mode6">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_back"
        android:background="@android:color/transparent"/>
    <TextView
        android:id="@+id/textViewMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_back"
        android:layout_toEndOf="@id/btn_back"
        android:layout_marginTop="15dp"
        android:text="Mode 6"
        android:textSize="40sp"
        android:textColor="#FBE748"
        android:textStyle="bold"
        android:fontFamily="@font/font_fs_just_awesome_regular"/>
    <TextView
        android:id="@+id/howToPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewMode"
        android:layout_alignStart="@id/textViewMode"
        android:layout_marginTop="15dp"
        android:text="How to play"
        android:textSize="40sp"
        android:textColor="@color/PinkLight"
        android:fontFamily="@font/font_opensan_regular"/>

    <TextView
        android:id="@+id/textViewIntro1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/howToPlay"
        android:layout_alignStart="@id/howToPlay"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/font_opensan_regular"
        android:text="@string/Intro_mode6_1"
        android:textColor="@color/Black"
        android:textSize="30sp" />
    <LinearLayout
        android:id="@+id/layoutInfor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@id/textViewIntro1"
        android:layout_alignLeft="@id/textViewIntro1">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_play_red" />
        <TextView
            android:id="@+id/textView_Info_Record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Intro_mode6_3"
            android:textColor="@color/Black"
            android:layout_marginLeft="10dp"
            android:textSize="30sp"
            android:fontFamily="@font/font_opensan_regular"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/layoutInfor"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="90dp"
        android:text=" Click here to play "
        android:textSize="40sp"
        android:textColor="@color/Black"
        android:fontFamily="@font/font_reenie_beanie"
        android:background="@drawable/my_button"
        android:textAllCaps="false"/>

</RelativeLayout>