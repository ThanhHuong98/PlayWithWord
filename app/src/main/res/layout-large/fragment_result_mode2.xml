<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_Result_Mode3"
    android:background="@drawable/result_background_mode2">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textViewWellDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:fontFamily="..."
        android:text="Keep it up!"
        android:textColor="#01d2a9"
        android:textSize="80sp" />
    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewWellDone"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="19dp"
        android:textSize="30sp"
        android:text="Final result"
        android:layout_alignLeft="@+id/textViewWellDone"
        android:fontFamily="@font/opensansregular"
        android:textColor="@color/Black" />
    <TextView
        android:id="@+id/textViewTotalScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewWellDone"
        android:layout_alignTop="@id/textViewResult"
        android:layout_alignRight="@id/textViewWellDone"
        android:layout_marginRight="4dp"
        android:textSize="30sp"
        android:text="Total Score:"
        android:fontFamily="@font/opensansregular"
        android:textColor="@color/Black" />
    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewResult"
        android:layout_alignLeft="@id/textViewResult"
        android:gravity="center"
        android:text="17/20"
        android:textSize="60sp"
        android:textColor="#0d8df0"
        android:fontFamily="@font/opensansregular"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTotalScore"
        android:layout_alignRight="@id/textViewTotalScore"
        android:layout_alignLeft="@id/textViewTotalScore"
        android:gravity="center"
        android:text="@string/Score"
        android:textSize="60sp"
        android:textColor="#ff4d4d"
        android:fontFamily="@font/opensansregular"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btn_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="23dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_icon_ok" />
    <Button
        android:id="@+id/btn_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@id/btn_finish"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:layout_alignTop="@id/btn_finish"
        android:layout_alignParentLeft="true"
        android:text="Share Now"
        android:textColor="@color/White"
        android:textSize="40sp"
        android:fontFamily="@font/font_opensan_regular"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@drawable/btn_finish_result"/>
</RelativeLayout>