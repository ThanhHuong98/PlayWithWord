<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background = "@drawable/signup"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/appTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="56dp"
        android:layout_marginTop="97dp"
        android:fontFamily="@font/font_fs_just_awesome_regular"
        android:text="@string/title"
        android:textColor="@android:color/black"
        android:textSize="55sp" />
    <TextView
        android:id="@+id/appTitleSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="56dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/font_opensan_regular"
        android:text="@string/signup"
        android:textColor="@android:color/black"
        android:textSize="55sp" />
    <TextView
        android:id="@+id/usernameTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="56dp"
        android:layout_marginTop="31dp"
        android:fontFamily="@font/font_opensan_light"
        android:text="@string/username"
        android:textColor="#FF7675"
        android:textSize="27sp" />
    <EditText
        android:id="@+id/txtUserName"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:layout_marginStart="56dp"
        android:layout_marginTop="5dp"
        android:background="@color/transparent"
        android:text=""
        android:textColor="#000"
        android:inputType="text"
        />
    <View
        android:layout_width="400dp"
        android:layout_height="2dp"
        android:background="#81ECEC"
        android:layout_gravity="start"
        android:layout_marginStart="56dp"
        />
    <TextView
        android:id="@+id/passwordTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="56dp"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/font_opensan_light"
        android:text="@string/password"
        android:textColor="#FF7675"
        android:textSize="27sp" />
    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:layout_marginStart="56dp"
        android:layout_marginTop="5dp"
        android:background="@color/transparent"
        android:text=""
        android:inputType="textPassword"
        android:textColor="#000"
        />
    <View
        android:layout_width="400dp"
        android:layout_height="2dp"
        android:background="#81ECEC"
        android:layout_gravity="start"
        android:layout_marginStart="56dp"
        />
    <TextView
        android:id="@+id/confirmPasswordTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="56dp"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/font_opensan_light"
        android:text="@string/confirmPass"
        android:textColor="#FF7675"
        android:textSize="27sp" />
    <EditText
        android:id="@+id/txtConfirmPassword"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:layout_marginStart="56dp"
        android:layout_marginTop="5dp"
        android:background="@color/transparent"
        android:text=""
        android:inputType="textPassword"
        android:textColor="#000"
        />
    <View
        android:layout_width="400dp"
        android:layout_height="2dp"
        android:background="#81ECEC"
        android:layout_gravity="start"
        android:layout_marginStart="56dp"
        />

    <Button
        android:id="@+id/btnSignUp1"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="76dp"
        android:background="@drawable/mybutton2"
        android:fontFamily="@font/font_opensan_light"
        android:text="@string/signup"
        android:textColor="#FF7675"
        android:textSize="33sp"
        />


</LinearLayout>



