<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="250dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/custom_shape_dialog_logout"
    tools:igore="MissingDefaultResource">
    <RelativeLayout
        android:id="@+id/anhGif"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@color/transparent">
        <com.hfda.playwithwords.GifImageView
            android:padding="10dp"
            android:id="@+id/GifImageViewLogout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tvNotification"
        android:layout_below="@+id/anhGif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="Are you sure you want to quit?"
        android:fontFamily="@font/font_roboto"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/Black"/>
    <RelativeLayout
        android:id="@+id/layoutButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/tvNotification"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@id/tvNotification"
        android:layout_alignRight="@id/tvNotification">

        <Button
            android:id="@+id/btnNoLogout"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="2dp"
            android:text="No"
            android:gravity="center"
            android:paddingTop="3dp"
            android:textSize="15sp"
            android:fontFamily="@font/font_roboto"
            android:textColor="#ffffff"
            android:background="@drawable/custom_button_dialog_logout"/>
        <Button
            android:id="@+id/btnYesLogout"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="2dp"
            android:text="Yes"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:fontFamily="@font/font_roboto"
            android:textColor="#FF7576"
            android:background="@drawable/custom_button_dialog_logout1"/>

    </RelativeLayout>

</RelativeLayout>