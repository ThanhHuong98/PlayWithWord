<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_mode6">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/textViewRound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="280dp"
        android:layout_marginTop="45dp"
        android:layout_marginRight="44dp"
        android:fontFamily="@font/font_opensan_regular"
        android:text="@string/Round0"
        android:textColor="@color/Black"
        android:textSize="25sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:fontFamily="@font/font_opensan_light"
            android:text="amphibian"
            android:textColor="@color/Black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textTransciption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewQuestion"
            android:layout_alignLeft="@id/textViewQuestion"
            android:layout_marginTop="5dp"
            android:layout_alignParentStart="@+id/textViewQuestion"
            android:fontFamily="@font/font_opensan_light"

            android:textSize="28sp" />

        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@+id/textViewQuestion"
            android:layout_toRightOf="@id/textViewQuestion"
            android:background="@drawable/btn_play" />

    </RelativeLayout>
    <com.skyfishjy.library.RippleBackground xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:rb_color="#0099CC"
        app:rb_duration="3000"
        app:rb_radius="60dp"
        app:rb_rippleAmount="6"
        app:rb_scale="6">


        <ImageView
            android:id="@+id/centerImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:src="@drawable/btn_play_red" />


    </com.skyfishjy.library.RippleBackground>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingLeft="12dp"
            android:text="Point(s):"
            android:textSize="23sp"
            android:background="#104da7"
            android:textColor="@color/White"
            android:fontFamily="@font/font_opensan_regular"/>

        <TextView
            android:id="@+id/textViewPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/textView"
            android:background="#104da7"
            android:fontFamily="@font/font_opensan_regular"
            android:paddingLeft="5dp"
            android:text="@string/Score"
            android:textColor="@color/White"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/textViewNumberHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="12dp"
            android:text="@string/Hint"
            android:textSize="23sp"
            android:layout_alignParentRight="true"
            android:textColor="@color/White"
            android:fontFamily="@font/font_opensan_regular"/>

        <ImageButton
            android:id="@+id/btnHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/textViewNumberHint"
            android:layout_alignBottom="@+id/textViewPoint"
            android:layout_marginRight="5dp"
            android:layout_alignTop="@+id/textViewPoint"
            android:src="@drawable/ic_action_hint"
            android:background="@android:color/transparent"/>
    </RelativeLayout>

</LinearLayout>
