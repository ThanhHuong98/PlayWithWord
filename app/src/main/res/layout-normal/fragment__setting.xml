<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment_Setting"
    android:background="@drawable/settingbackground"
    android:layout_centerHorizontal="true">
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:fontFamily="@font/font_opensan_regular"
        android:textColor="#27AE60"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:text="SETTING"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/txt_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sound"

            android:layout_marginLeft="235dp"
            android:textSize="30sp"
            android:textColor="@color/Black"
            android:fontFamily="@font/font_opensan_regular"
            />

        <ImageButton
            android:id="@+id/ic_sound"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="72dp"
            android:layout_marginRight="87dp"
            android:background="@drawable/ic_sound" />
        <ImageButton
            android:id="@+id/ic_volume_up"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="72dp"
            android:layout_marginRight="273dp"
            android:background="@drawable/ic_sound_plus" />
        <ImageButton
            android:id="@+id/ic_volume_down"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="72dp"
            android:layout_marginRight="178dp"
            android:background="@drawable/ic_sound_minus" />


    </RelativeLayout>

</LinearLayout>