<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f7f7"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_gravity="center"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="47dp"
        android:layout_marginTop="58dp"
        android:background="#00E9BB" />

    <TextView
        android:id="@+id/textViewRound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/font_opensan_regular"
        android:gravity="center"
        android:text="@string/Round"
        android:textColor="@color/Black"
        android:textSize="25sp" />


    <ImageView
        android:id="@+id/imgView"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/imgview_custom_mode2"
        android:src="@mipmap/elephant1" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">

        <Button
            android:id="@+id/btnAnswer1"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/button_mode2"
            android:text="Con Voi"
            android:textColor="@color/Black"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btnAnswer2"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@id/btnAnswer1"
            android:background="@drawable/button_mode2"
            android:ems="10"
            android:text="@string/Answer2"
            android:textColor="@color/Black"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btnAnswer3"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@id/btnAnswer1"
            android:layout_below="@id/btnAnswer1"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_mode2"
            android:ems="10"
            android:text="@string/Answer3"
            android:textColor="@color/Black"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btnAnswer4"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@id/btnAnswer2"
            android:layout_below="@id/btnAnswer2"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/btnAnswer3"
            android:background="@drawable/button_mode2"
            android:ems="10"
            android:text="@string/Answer4"
            android:textColor="@color/Black"
            android:textSize="25sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/font_opensan_regular"
            android:paddingLeft="12dp"
            android:text="Point(s):"
            android:background="#01D2A9"
            android:textColor="@color/White"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textViewPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:fontFamily="@font/font_opensan_regular"
            android:paddingLeft="5dp"
            android:text="@string/Score"
            android:textColor="@color/White"
            android:background="#01D2A9"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textViewNumberHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:fontFamily="@font/font_opensan_regular"
            android:text="@string/Hint"
            android:background="#01D2A9"
            android:textColor="@color/White"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/btnHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textViewPoint"
            android:layout_alignTop="@+id/textViewPoint"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/textViewNumberHint"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_action_hint" />
    </RelativeLayout>
</LinearLayout>