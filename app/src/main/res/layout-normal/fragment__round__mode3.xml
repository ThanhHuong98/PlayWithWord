<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_mode3"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_gravity="center"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="58dp"
        android:layout_marginRight="47dp"
        android:background="@color/PinkLight" />

    <TextView
        android:id="@+id/textViewRound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/font_opensan_regular"
        android:text="@string/Round"
        android:textColor="@color/Black"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textViewQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="5dp"
        android:fontFamily="@font/font_opensan_light"
        android:text="@string/QuestionMode3"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/txtAnswer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/font_opensan_regular"
        android:text="Answer:"
        android:textColor="#6C5CE7"
        android:textSize="30sp"
        android:textStyle="bold" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#a6b7c9"
            android:fontFamily="@font/font_opensan_regular"
            android:paddingLeft="12dp"
            android:text="Point(s):"
            android:textColor="@color/White"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView"
            android:layout_toEndOf="@+id/textView"

            android:layout_toRightOf="@+id/textView"
            android:background="#a6b7c9"
            android:fontFamily="@font/font_opensan_regular"
            android:paddingLeft="5dp"
            android:text="@string/Score"
            android:textColor="@color/White"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewNumberHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/font_opensan_regular"
            android:text="@string/Hint"
            android:textColor="@color/White"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editText_Answer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="44dp"
            android:textColor="@color/Black"
            android:paddingLeft="5dp"
            android:hint="@string/textHint"
            android:textSize="25dp"
             />

        <TextView
            android:id="@+id/textHint"
            android:layout_width="81dp"
            android:layout_height="28dp"
            android:layout_below="@+id/iconV"
            android:layout_marginLeft="54dp"
            android:textSize="20sp"
            android:hint="HINT:"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/btnCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText_Answer3"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="70dp"
           android:background="@drawable/button_check3"
            android:fontFamily="@font/font_opensan_regular"
            android:paddingLeft="35dp"
            android:paddingRight="30dp"
            android:text="@string/Check"
            android:textColor="#FFFF"
            android:textSize="30dp" />
        <!--<Button-->
            <!--android:id="@+id/btnCheck"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/textHint"-->
            <!--android:layout_marginLeft="47dp"-->
            <!--android:layout_marginTop="31dp"-->
            <!--android:background="@drawable/button_check3"-->
            <!--android:paddingLeft="34dp"-->
            <!--android:paddingRight="37dp"-->
            <!--android:text="@string/Check"-->
            <!--android:textColor="@color/AntiqueWhite"-->
            <!--android:textSize="40dp" />-->
        <ImageView
            android:id="@+id/iconV"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/editText_Answer3"
            android:background="@color/Black"
            android:layout_marginLeft="47dp"
            android:layout_marginRight="35dp"/>
        <ImageButton
            android:id="@+id/btnHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textViewPoint"
            android:layout_alignBottom="@+id/textViewPoint"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/textViewNumberHint"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_action_hint" />
    </RelativeLayout>
</LinearLayout>