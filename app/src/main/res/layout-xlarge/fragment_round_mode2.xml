<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f9f7f7">

    <!-- TODO: Update blank fragment layout -->

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginStart="67dp"
        android:layout_marginEnd="67dp"
        android:layout_marginTop="50dp"
        android:progressBackgroundTint="@color/DimGray"
        android:progressTint="#01D2A9"/>

    <TextView
        android:id="@+id/textViewRound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/font_opensan_regular"
        android:gravity="center"
        android:text="@string/Round"
        android:textColor="@color/Black"
        android:textSize="50sp" />


    <ImageView
        android:id="@+id/imgView"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="90dp"
        android:layout_gravity="center"
        android:layout_marginRight="90dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/btnAnswer1"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/button_mode2_xlarge"
            android:text="Con Voi"
            android:ems="10"
            android:fontFamily="@font/font_opensan_light"
            android:textColor="@color/Black"
            android:textSize="60sp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btnAnswer2"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginLeft="80dp"
            android:layout_toRightOf="@id/btnAnswer1"
            android:background="@drawable/button_mode2_xlarge"
            android:ems="10"
            android:fontFamily="@font/font_opensan_light"
            android:text="@string/Answer2"
            android:textColor="@color/Black"
            android:textSize="60sp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btnAnswer3"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_alignLeft="@id/btnAnswer1"
            android:layout_below="@id/btnAnswer1"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_mode2_xlarge"
            android:ems="10"
            android:text="@string/Answer3"
            android:textColor="@color/Black"
            android:fontFamily="@font/font_opensan_light"
            android:textSize="60sp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btnAnswer4"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_alignLeft="@id/btnAnswer2"
            android:layout_below="@id/btnAnswer2"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@id/btnAnswer3"
            android:background="@drawable/button_mode2_xlarge"
            android:ems="10"
            android:fontFamily="@font/font_opensan_light"
            android:text="@string/Answer4"
            android:textColor="@color/Black"
            android:textSize="60sp"
            android:textAllCaps="false"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#01D2A9"
            android:fontFamily="@font/font_opensan_regular"
            android:paddingLeft="12dp"
            android:text="Point(s):"
            android:textColor="@color/White"
            android:textSize="65sp" />

        <TextView
            android:id="@+id/textViewPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:background="#01D2A9"
            android:fontFamily="@font/font_opensan_regular"
            android:paddingLeft="5dp"
            android:text="@string/Score"
            android:textColor="@color/White"
            android:textSize="65sp" />

        <TextView
            android:id="@+id/textViewNumberHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:background="#01D2A9"
            android:fontFamily="@font/font_opensan_regular"
            android:text="@string/Hint"
            android:textColor="@color/White"
            android:textSize="65sp" />

        <ImageButton
            android:id="@+id/btnHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textViewPoint"
            android:layout_alignTop="@+id/textViewPoint"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/textViewNumberHint"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_action_hint" />
    </RelativeLayout>
</LinearLayout>