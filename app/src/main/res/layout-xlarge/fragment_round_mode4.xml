<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_mode4">

    <!-- TODO: Update blank fragment layout -->

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginLeft="77dp"
        android:layout_marginRight="77dp"
        android:layout_marginTop="88dp"
        style= "?android:attr/progressBarStyleHorizontal"
        android:progressBackgroundTint="@color/DimGray"
        android:progressTint="@color/PinkLight"/>

    <TextView
        android:id="@+id/textViewRound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="49dp"
        android:text="@string/Round"
        android:textSize="55sp"
        android:textColor="@color/Black"
        android:fontFamily="@font/font_opensan_regular"/>

    <ImageButton
        android:id="@+id/btn_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_btn_volume"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        android:background="@android:color/transparent"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="74dp"
        android:layout_marginRight="74dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/my_button">
        <EditText
            android:id="@+id/editText_Answer"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_alignParentLeft="true"
            android:gravity="left|center"
            android:hint="@string/textHint"
            android:textColorHint="@color/Gray"
            android:textColor="@color/Black"
            android:textSize="40sp"
            android:paddingLeft="15dp"
            android:fontFamily="@font/font_opensan_regular"
            android:background="@android:color/transparent"
            android:inputType="text"/>
        <Button
            android:id="@+id/btn_done"
            android:layout_width="121dp"
            android:layout_height="90dp"
            android:layout_alignTop="@+id/editText_Answer"
            android:layout_alignParentRight="true"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="17dp"
            android:layout_marginRight="17dp"
            android:gravity="center"
            android:text="Done"
            android:textSize="45sp"
            android:background="@drawable/btn_done"
            android:textAllCaps="false"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingLeft="12dp"
            android:text="Point(s):"
            android:textSize="50sp"
            android:background="#FF7576"
            android:textColor="@color/White"
            android:fontFamily="@font/font_opensan_regular"/>

        <TextView
            android:id="@+id/textViewPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textView"
            android:layout_alignTop="@+id/textView"
            android:paddingLeft="5dp"
            android:text="@string/Score"
            android:textSize="50sp"
            android:textColor="@color/White"
            android:background="#FF7576"
            android:fontFamily="@font/font_opensan_regular"/>

        <TextView
            android:id="@+id/textViewNumberHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="12dp"
            android:text="@string/Hint"
            android:textSize="50sp"
            android:layout_alignParentRight="true"
            android:textColor="@color/White"
            android:fontFamily="@font/font_opensan_regular"/>

        <ImageButton
            android:id="@+id/btnHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/textViewNumberHint"
            android:layout_alignBottom="@+id/textViewPoint"
            android:layout_marginRight="5dp"
            android:layout_alignTop="@+id/textViewPoint"
            android:src="@drawable/ic_action_hint"
            android:background="@android:color/transparent"/>
    </RelativeLayout>

</LinearLayout>